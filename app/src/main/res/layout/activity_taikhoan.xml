<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Taikhoan"
    android:background="#FFEB3B">

    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="430dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/customeframe"
        android:backgroundTint="#F6F2F2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/settingacount" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="209dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="228dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Họ và tên"
                    android:textColor="#0F0E0E"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tkname"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/customedtext"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Số điện thoại"
                    android:textColor="#0F0E0E"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tkphone"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/customedtext"
                    android:paddingLeft="5dp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Email"
                    android:textColor="#0F0E0E"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tkmail"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/customedtext"
                    android:paddingLeft="5dp" />

            </LinearLayout>
        </FrameLayout>

        <Button
            android:id="@+id/btneditinfo"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FFEB3B"
            android:text="Thay đổi thông tin"
            android:textColor="#040404"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonexittaikhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFEB3B"
            android:text="Thoát"
            android:textColor="#0B0B0B"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Tài khoản"
        android:textColor="#161515"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>