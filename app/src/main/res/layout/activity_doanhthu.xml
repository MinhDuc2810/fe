<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminActivity.DoanhthuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFEB3B">

        <TextView
            android:id="@+id/tvexitdoanhthu"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="←"
            android:textColor="#0F0E0E"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtviewxacnhangiaodich"
            android:layout_width="273dp"
            android:layout_height="85dp"
            android:background="#FFEB3B"
            android:gravity="center"
            android:text="Doanh thu"
            android:textColor="#070707"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="233dp"

                android:layout_margin="20sp"
                android:background="@drawable/custome_frame1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:text="Thống kê theo PT"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_month"
                    android:layout_width="138dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="10dp"

                    android:background="@drawable/customedtext" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_year"
                        android:layout_width="138dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/customedtext" />

                    <Button
                        android:id="@+id/btntotalpt"
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"

                        android:backgroundTint="#FFEB3B"
                        android:text="Xác nhận"
                        android:textStyle="bold" />

                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="138dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/customedtext"
                     />

                <TextView
                    android:id="@+id/totalpt"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"

                    android:textColor="@color/black"
                    android:textSize="20dp"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:layout_margin="20sp"
                android:background="@drawable/custome_frame1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:gravity="center"
                    android:text="Thống kê theo ngày"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_selected_date"
                        android:layout_width="134sp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/customedtext"
                        android:gravity="center"
                        android:paddingLeft="5sp"

                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btn_pick_date"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/calendar" />

                    <Button
                        android:id="@+id/btntotalday"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"

                        android:backgroundTint="#FFEB3B"
                        android:text="Xác nhận"
                        android:textStyle="bold" />


                </LinearLayout>


                <TextView
                    android:id="@+id/totalday"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:layout_margin="20sp"
                android:background="@drawable/custome_frame1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:text="Thống kê theo tháng"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_month1"
                    android:layout_width="139dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/customedtext" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <Spinner
                        android:id="@+id/spinner_year1"
                        android:layout_width="138dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/customedtext" />

                    <Button
                        android:id="@+id/btntotalall"
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:backgroundTint="#FFEB3B"
                        android:text="Xác nhận"
                        android:textStyle="bold" />


                </LinearLayout>




                <TextView
                    android:id="@+id/totalall"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>