<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"

    android:background="@drawable/custome_frame1"
    >


    <TextView
        android:id="@+id/ssusername"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="Tên khách"
        android:textColor="#0B0B0B"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ssuserid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="mã người dùng"
        android:textColor="#0B0B0B"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ssphoneNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="Số điện thoại"
        android:textColor="#0B0B0B"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ssdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="ngày"
        android:textColor="#0B0B0B"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/sstime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="Thời gian"
        android:textColor="#0B0B0B"
        android:textSize="12sp" />



</LinearLayout>

