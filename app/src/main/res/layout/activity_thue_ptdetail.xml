<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#FFEB3B"
    android:orientation="vertical"
    tools:context=".UserActivity.ThuePTdetail">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:gravity="center"
        android:text="Thanh toán thuê PT"
        android:textColor="#0F0E0E"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thueptname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:text="Tên PT"
        android:textColor="#0B0B0B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/det"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:text="Nhập số buổi (1 buổi có giá 300.000đ)"
        android:textAlignment="viewStart"
        android:textColor="#121111"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/sessionpt"
            android:layout_width="276dp"
            android:layout_height="61dp"
            android:paddingLeft="10dp"
            android:textColor="#121111"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btntotalthuept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFEB3B"
            android:text="Xác nhận"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/thueptprice"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="Total price:" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Chọn hình thức thanh toán"
        android:textColor="#121111"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnthanhtoanpt"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:text="Tiền mặt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnzalopaypt"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:text="Zalopay"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnexitthanhtoanpt"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:backgroundTint="#FFEB3B"
        android:text="Thoát"
        android:textStyle="bold" />

</LinearLayout>